{
  "verbose": true,
  "debug": true,
  "exec": "tsc && node dist/app.js",
  "ignore": [
    "mochawesome-report",
    "node_modules",
    "./test",
    "**/*.d.ts",
    "*.test.ts",
    "*.spec.ts",
    "fixtures/*",
    "test/**/*",
    "docs/*"
  ],
  "events": {
    "restart": ""
  },
  "watch": ["src", "./tsconfig.json"],
  "ext": "ts",
  "inspect": true
}
